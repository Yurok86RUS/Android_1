<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">
    <TableRow
        android:layout_weight="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:columnCount="4"
            android:orientation="horizontal">

            <TextView android:text="" />
            <TextView android:text="@string/now"
                android:layout_gravity="center"/>
            <TextView android:text="@string/tomorrow"
                android:layout_gravity="center"/>
            <TextView android:text="@string/after"/>
            <TextView android:text="" />
            <ImageView android:src="@drawable/rain"
                android:layout_gravity="center"/>
            <ImageView android:src="@drawable/snow"
                android:layout_gravity="center"/>
            <ImageView android:src="@drawable/sun"
                android:layout_gravity="center"/>
            <TextView android:text="@string/day"
                android:layout_gravity="right"/>
            <TextView android:text="+5"
                android:layout_gravity="center"/>
            <TextView android:text="-15"
                android:layout_gravity="center"/>
            <TextView android:text="+458"
                android:layout_gravity="center"/>
            <TextView android:text="@string/night"
                android:layout_gravity="right"/>
            <TextView android:text="0"
                android:layout_gravity="center"/>
            <TextView android:text="-144"
                android:layout_gravity="center"/>
            <TextView android:text="+50"
                android:layout_gravity="center"/>
        </GridLayout>
    </TableRow>
</TableLayout>
