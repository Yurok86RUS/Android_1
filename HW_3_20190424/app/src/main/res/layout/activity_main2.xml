<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Main2Activity">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_city_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/city_name"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/back" />
    </TableRow>

    <TableRow
        android:layout_weight="1">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:columnCount="4"
            android:orientation="horizontal">

            <TextView android:text="" />
            <TextView android:text="@string/now"
                android:layout_gravity="center"/>
            <TextView android:text="@string/tomorrow"
                android:layout_gravity="center"/>
            <TextView android:text="@string/after"/>

            <TextView android:text="" />

            <ImageView android:src="@drawable/rain"
                android:layout_gravity="center"/>
            <ImageView android:src="@drawable/snow"
                android:layout_gravity="center"/>
            <ImageView android:src="@drawable/sun"
                android:layout_gravity="center"/>

            <TextView android:text="@string/day"
                android:layout_gravity="end" />
            <TextView android:text="@string/temp_now_day"
                android:layout_gravity="center"/>
            <TextView android:text="@string/temp_tomorrow_day"
                android:layout_gravity="center"/>
            <TextView android:text="@string/temp_after_day"
                android:layout_gravity="center"/>

            <TextView android:text="@string/night"
                android:layout_gravity="end"/>
            <TextView android:text="@string/temp_now_night"
                android:layout_gravity="center"/>
            <TextView android:text="@string/temp_tomorrow_night"
                android:layout_gravity="center"/>
            <TextView android:text="@string/temp_after_nightt"
                android:layout_gravity="center"/>

            <TextView android:text="@string/humidity"
                android:layout_gravity="end"/>
            <TextView android:text="@string/hudmidity_now"
                android:layout_gravity="center"/>
            <TextView android:text="@string/hudmidity_tomorrow"
                android:layout_gravity="center"/>
            <TextView android:text="@string/hudmidity_after"
                android:layout_gravity="center"/>

            <TextView android:text="@string/pressure"
                android:layout_gravity="end"/>
            <TextView android:text="@string/pressure_now"
                android:layout_gravity="center"/>
            <TextView android:text="@string/pressure_tomorrow"
                android:layout_gravity="center"/>
            <TextView android:text="@string/pressure_after"
                android:layout_gravity="center"/>
        </GridLayout>
    </TableRow>
</TableLayout>
